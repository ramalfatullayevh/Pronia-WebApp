@{
    ViewData["Title"] = "Register";
}

@model UserRegisterVM
<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 pt-5 pt-lg-0">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Sign Up</h4>
                        <div class="row">
                           <div asp-validation-summary="ModelOnly"></div><br>
                            <div class="col-md-4 col-12">
                                <label asp-for="Name">First Name</label>
                                <input asp-for="Name" type="text" placeholder="First Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 col-12">
                                <label asp-for="Surname">Last Name</label>
                                <input asp-for="Surname" type="text" placeholder="Last Name" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 col-12">
                                <label asp-for="UserName">UserName</label>
                                 <input asp-for="UserName" type="text" placeholder="UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Email">Email Address*</label>
                                <input asp-for="Email" type="email" placeholder="example@gmail.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password"/>
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password"/>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Register<br />
                                </button>
                            </div>
                                <a asp-controller="Account" asp-action="Login"> Sign in Account  </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
