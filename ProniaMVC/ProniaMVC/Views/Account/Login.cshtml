
@{
    ViewData["Title"] = "Login";
}

@model UserLoginVM
<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
          <div class="col-lg-6">
                <form method ="post">
                    <div class="login-form">
                        <h4 class="login-title">Sign In</h4>
                        <div class="row">
                            <div class="col-lg-12">
                            <div asp-validation-summary="ModelOnly"></div><br>
                                <label asp-for="UsernameOrEmail">Username or Email</label>
                                <input asp-for="UsernameOrEmail"/>
                                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" placeholder="Password"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="RememberMe"></label>
                                <input asp-for="RememberMe"/>
                                <span asp-validation-for="RememberMe"></span>
                            </div>
                            <div class="col-md-4 pt-1 mt-md-0">
                                <div class="forgotton-password_info">
                                    <a asp-controller="Account" asp-action="Register"> Do You Need Account </a>
                                </div>
                            </div>
                            <div class="col-lg-12 pt-5">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Login
                                </button>
                            </div>
                                <a asp-controller="Account" asp-action="Register"> Sign Up  </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
