
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Client>
<div class="container">
    <div class="card mt-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>User Image</th>
                        <th>Username</th>
                        <th>Position</th>
                        <th>Comment</th>
                        <th>Edit</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Client client in Model)
                    {
                        <tr>
                            <td>@client.UserImg</td>
                            <td>@client.UserName</td>
                            <td>@client.Position</td>
                            <td>@client.Comment</td>
                            <td><a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Client" asp-action="Update" asp-route-id="@client.Id">Edit</a> </td>
                            <td><a type="button" class="btn btn-danger" asp-area="Admin" asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id">Delete</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

