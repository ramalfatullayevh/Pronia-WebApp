
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Banner>
<div class="container">
    <div class="card mt-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Title-1</th>
                        <th>Title-2</th>
                        <th>Image</th>
                        <th>Edit</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Banner banner in Model)
                    {
                        <tr>
                            <td>@banner.PrimaryTitle</td>
                            <td>@banner.SecondTitle</td>
                            <td>@banner.ImageUrl</td>
                            <td><a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Banner" asp-action="Update" asp-route-id="@banner.Id">Edit</a> </td>
                            <td><a type="button" class="btn btn-danger" asp-area="Admin" asp-controller="Banner" asp-action="Delete" asp-route-id="@banner.Id">Delete</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


